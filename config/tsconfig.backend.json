{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "outDir": "../dist",
    "resolveJsonModule": true,
    "rootDir": "../src",
    "sourceMap": true,
    "strict": true,
  },
  "include": [
    "../src/backend/**/*.ts",
    "../src/database/**/*.ts",
    "../src/desktop/**/*.ts"
  ],
  "exclude": ["node_modules"]
}