{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "useDefineForClassFields": true
  },
  "include": [
    "../src/frontend/**/*.ts",
    "../src/frontend/**/*.js",
    "../src/frontend/**/*.svelte"
  ],
  "exclude": ["node_modules"]
}