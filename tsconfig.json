{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    // Connects .ts files not in frontend, frontend compilation is handled by rollup
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "src/frontend/**/*"
  ]
}